@{
    var pageName = ViewContext.RouteData.Values["action"].ToString();
    ViewBag.Icon = "<i class='fas fa-home'></i> ";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SpyderApp - @ViewBag.Title</title>
    @*<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">*@
    <link rel="stylesheet" href="https://use.typekit.net/wzr3fhy.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-6jHF7Z3XI3fF4XZixAuSu0gGKrXwoX/w3uFPxC56OtjChio7wtTGJWRW53Nhx6Ev" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jszip-2.5.0/dt-1.10.18/af-2.3.2/b-1.5.4/b-colvis-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/cr-1.5.0/fc-3.2.5/fh-3.1.4/kt-2.5.0/r-2.2.2/rg-1.1.0/rr-1.2.4/sc-1.5.0/sl-1.2.6/datatables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.2/jquery.fancybox.min.css" />
    @*<link rel="stylesheet" type="text/css" href="" />*@

    @*<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", required: false)
</head>
<body>
    <div class="page">

        <header>
            @if (Request.IsAuthenticated)
            {
                <div class="collapse" id="navbarHeader">
                    <div class="container">

                        <ul>
                            <li><a href="/Properties"><span><i class="far fa-home-lg"></i></span>Properties</a></li>
                            <li><a href="/Contracts"><span><i class="fas fa-file-contract"></i></span>Contracts</a></li>
                            <li><a href="/Locations"><span><i class="fas fa-vector-square"></i></span>Locations</a></li>
                            <li><a href="/Floorplans"><span><i class="fas fa-map"></i></span>Floorplans</a></li>
                            <li>
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <a href="javascript:document.getElementById('logoutForm').submit()">
                                        <span><i class="fas fa-sign-out-alt"></i></span>Log off
                                    </a>

                                }
                            </li>
                        </ul>

                    </div>
                </div>
            }
            <div class="container">
                <div class="row justify-content-between no-gutters">
                    <div class="col-1">
                        <a href="/">
                            <div class="svg-logo">
                                @Html.Partial("_Logo")
                            </div>
                        </a>
                    </div>
                    <div class="col site-title">
                        @*@(pageName == "View" ? @Html.Raw(ViewBag.Icon) : "")  @ViewBag.Title*@
                        @ViewBag.Title
                    </div>
                    @if (Request.IsAuthenticated)
                    {
                        <div class="col-1 text-right">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="true" aria-label="Toggle navigation">
                                <i class="fas fa-ellipsis-h"></i>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </header>

        <main role="main">
            <div class="container">
                <div class="login-info text-right">
                    @Html.Partial("_LoginPartial")
                </div>
                <div class="main-body">
                    @RenderBody()
                </div>
            </div>
        </main>

        <footer>
            <div class="container">
                <p>&copy; @DateTime.Now.Year Lake Maintenance</p>
            </div>
        </footer>

    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @*<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>*@
    @*<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>*@

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/jszip-2.5.0/dt-1.10.18/af-2.3.2/b-1.5.4/b-colvis-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/cr-1.5.0/fc-3.2.5/fh-3.1.4/kt-2.5.0/r-2.2.2/rg-1.1.0/rr-1.2.4/sc-1.5.0/sl-1.2.6/datatables.min.js"></script>


    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.2/jquery.fancybox.min.js"></script>
    <script src="/scripts/bootstrap-toolkit.min.js"></script>

    @*<script type="text/javascript" src=""></script>*@

    @Scripts.Render("~/bundles/site")

    @RenderSection("scripts", required: false)


</body>
</html>
